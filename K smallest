In this problem we have use max heap to determine the k smallest in the array...
TC : O(nlogk)
SC : O(k)

class Solution {
public:
    // arr : given array
    // k : find kth smallest element and return using this function
    int kthSmallest(vector<int> &arr, int k) {
        // code here
        int n = arr.size();
        priority_queue<int> pq;
        
        // Traverse the array and insert elements into the priority queue (max-heap)
        for (int i = 0; i < n; i++) {
            pq.push(arr[i]);
            
            // Ensure the size of the heap is always 'k'
            if (pq.size() > k) {
                pq.pop();
            }
        }
        
        // The top of the heap will be the kth smallest element
        return pq.top();
    }
};
